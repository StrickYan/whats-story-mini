    <button id="shareBtn_tail" plain="true" open-type="share">
      <image mode="aspectFit" src="/image/share.png"></image>
    </button>
  </view> -->
  <view class="offer" wx:if="{{isShowAd}}">
    <ad unit-id="adunit-2529b2c74f225831"></ad>
  </view>
  <template is="foot" wx:if="{{isDomainShow}}" />
</view>