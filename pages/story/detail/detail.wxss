/**detail.wxss**/
@import "../../template/foot.wxss";

page {
  height: 100%; /*服务 foot 底部孤固定*/
}

.page {
  position: relative; /*服务 foot 底部固定*/
  min-height: 100%; /*服务 foot 底部固定*/
  padding-bottom: 160rpx; /*服务 foot 底部固定*/
  box-sizing: border-box; /*服务 foot 底部固定*/
  display: flex;
  flex-direction: column;
}

#story_detail {
  margin: 50rpx;
  /* padding: 20rpx; */
}

#title {
  font-size: 50rpx;
  font-weight: bold;
  color: rgb(153, 51, 51);
}

#story_detail_line {
  display: flex;
  flex-direction: row;
  color: gray;
  /* justify-content: space-between; */
  margin: 30rpx 0;
}

#author, #publish_time, #source_name, #cate_name {
  display: inline-block;
  font-size: 24rpx;
  margin-right: 20rpx;
}

#source_name, #cate_name {
  border-radius: 20rpx;
  padding: 0 10rpx;
  border: 1px #ccc solid;
}

#content {
  font-size: 34rpx;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}

#story_detail_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

#story_detail_top_right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
}

#shareBtn {
  display: flex;
  padding: 0;
  border: 0;
}

#story_detail_top_right image {
  width: 50rpx;
  height: 50rpx;
}

#story_detail_tail {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  margin-bottom: 100rpx;
}

#shareBtn_tail {
  display: flex;
  padding: 30rpx;
  border: 1px #ccc solid;
  border-radius: 60rpx;
  /* box-shadow: 0 0 50rpx #ccc, 0 0 25rpx #ccc inset; */
}

#shareBtn_tail image {
  width: 60rpx;
  height: 60rpx;
}

.offer {
  margin: 50rpx;
}

.offer:empty {
  margin: 0; /*无广告填充则隐藏offer view*/
}

.offer ad {
  border-radius: 15rpx;
}
